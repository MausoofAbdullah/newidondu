<div class="container">
   <form action="/admin-addnews" method="post" enctype="multipart/form-data" class="form-horizontal">
<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Title</label>
  <input type="text" class="form-control" name="title" id="exampleFormControlInput1" placeholder="title of the news">
</div>
 <div class="mb-3 col-4">
     <select name="category" id="Category" class="form-control" >
                            {{#each category}}
                            <option value="{{this.category}}">{{this.category}}</option>
                            {{/each}}
                        </select>
  </div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">First Paragraph</label>
  <textarea class="form-control" name="body" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>
<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Subtitle</label>
  <input type="text" class="form-control" name="subtitle" id="exampleFormControlInput1" placeholder="subtitle of the news">
</div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">secondparagraph</label>
  <textarea class="form-control" name="secondparagraph" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">thirdparagraph</label>
  <textarea class="form-control" name="thirdparagraph" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>

<div id="imagePreview" class="mb-3" style="height: 50px;width:80px;display: flex; flex-wrap: nowrap;"></div>
<div class="mb-3">
  <label class="form-label" for="customFile">Main image</label>
<input type="file" class="form-control col-4" name="image1" id="customFile"  />
</div>
<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Main image title </label>
  <input type="text" class="form-control" name="imagetitle1" id="exampleFormControlInput1" placeholder="title of the Main Image">
</div>
<div class="mb-3">
  
  <label for="formFileMultiple" class="form-label">Second image</label>
  <input class="form-control col-4" name="image2" type="file" id="formFileMultiple" >
 
</div>

<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Title of second Image</label>
  <input type="text" class="form-control" name="imagetitle2" id="exampleFormControlInput1" placeholder="title of the second Image">
</div>
<div class="mb-3">
    <label for="formFileMultiple" class="form-label">select multiple images</label>
  <input class="form-control col-4" name="images" type="file" id="formFileMultiple" multiple >
</div>

<div class="mb-3">
  <label for="datepicker" class="form-label">Select Date</label>
  <input class="form-control col-4" name="date" type="date" id="datepicker">
</div>
 <div class="row form-group">
                    <button type="submit" class="btn btn-primary ">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
</form>
